<UserControl x:Class="Library.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="20" Grid.Row="0">
            <TextBlock Text="Vitajte v Knižnici!" FontSize="24" FontWeight="Bold" Foreground="#EDF4F2" Margin="0 0 0 10"/>
            <TextBlock Text="Systém na správu kníh rozdelený na jednotlivé knižnice do ktorých sa dajú pridávať knihy" FontSize="16" Foreground="#EDF4F2" Margin="0 0 0 10"/>
        </StackPanel>
        <Grid Grid.Row="1" Margin="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Width="100" Height="100" Background="#A1CAF1" Grid.Column="0" CornerRadius="10">
                <StackPanel VerticalAlignment="Center">
                    <Image Width="20" Height="20" Source="/Pictures/bookshelf.png" Margin="0 0 0 10"/>
                    <TextBlock Text="Počet knižníc" FontSize="12" FontWeight="Bold" Foreground="#303030" Margin="10 0 0 10"/>
                    <TextBlock x:Name="NumberOfLibraries" Text="0" FontSize="12" FontWeight="Bold" Foreground="#303030" Margin="10 0 0 10"/>
                </StackPanel>
            </Border>
            <Border Width="100" Height="100" Background="#A1CAF1" Grid.Column="1" CornerRadius="10">
                <StackPanel VerticalAlignment="Center">
                    <Image Width="20" Height="20" Source="/Pictures/book.png" Margin="0 0 0 10"/>
                    <TextBlock Text="Počet kníh" FontSize="12" FontWeight="Bold" Foreground="#303030" Margin="10 0 0 10"/>
                    <TextBlock x:Name="NumberOfBooks" Text="0" FontSize="12" FontWeight="Bold" Foreground="#303030" Margin="10 0 0 10"/>
                </StackPanel>
            </Border>
            <Border Width="100" Height="100" Background="#A1CAF1" Grid.Column="2" CornerRadius="10">
            </Border>
        </Grid>
    </Grid>
</UserControl>
